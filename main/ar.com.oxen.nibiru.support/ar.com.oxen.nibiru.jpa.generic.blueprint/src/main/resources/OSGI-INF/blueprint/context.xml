<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
	">

	<reference id="dataSource" interface="javax.sql.DataSource" />

	<reference id="conversationAccessor"
		interface="ar.com.oxen.nibiru.conversation.api.ConversationAccessor" />

	<service ref="entityManagerFactory" interface="javax.persistence.EntityManagerFactory" />

	<bean id="entityManagerFactory"
		class="ar.com.oxen.nibiru.jpa.generic.ConversationEntityManagerFactory">
		<property name="decorated">
			<bean
				class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
				<property name="dataSource" ref="dataSource" />
			</bean>
		</property>
		<property name="conversationAccessor" ref="conversationAccessor" />
	</bean>

</blueprint>