<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>ar.com.oxen.nibiru.sample</artifactId>
		<groupId>ar.com.oxen.nibiru</groupId>
		<version>0.2</version>
	</parent>
	<groupId>ar.com.oxen.nibiru.sample</groupId>
	<artifactId>ar.com.oxen.nibiru.sample.springwebapp</artifactId>
	<packaging>war</packaging>
	<name>ar.com.oxen.nibiru.sample.springweapp</name>
	<url>http://maven.apache.org</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>
		<dependency>
			<groupId>ar.com.oxen.nibiru.support</groupId>
			<artifactId>ar.com.oxen.nibiru.standalone</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.report</groupId>
			<artifactId>ar.com.oxen.nibiru.report.module</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.sample</groupId>
			<artifactId>ar.com.oxen.nibiru.sample.module</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.sample</groupId>
			<artifactId>ar.com.oxen.nibiru.sample.datasource.fragment</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>ar.com.oxen.nibiru.sample</groupId>
			<artifactId>ar.com.oxen.nibiru.sample.jpa.fragment</artifactId>
			<version>${nibiru-version}</version>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>com.springsource.org.h2</artifactId>
			<version>1.0.71</version>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<wtpversion>1.5</wtpversion>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
