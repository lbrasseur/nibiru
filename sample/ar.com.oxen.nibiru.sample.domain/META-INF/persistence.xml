<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="nibiruSample"
		transaction-type="RESOURCE_LOCAL">
		<jta-data-source>osgi:service/javax.sql.DataSource/</jta-data-source>
		<class>ar.com.oxen.nibiru.sample.domain.Subject</class>
		<class>ar.com.oxen.nibiru.sample.domain.Course</class>
		<class>ar.com.oxen.nibiru.sample.domain.Student</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema" />
			<property name="openjpa.jdbc.DBDictionary" value="h2" />
		</properties>
	</persistence-unit>
</persistence>